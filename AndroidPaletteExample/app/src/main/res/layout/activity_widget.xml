<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.tibaes.androidpaletteexample.WidgetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <Button
                android:id="@+id/btn_w_one"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="0"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_example"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Visualização de texto"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btn_w_two"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="1"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Botão"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btn_w_three"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="2"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <ToggleButton
                android:id="@+id/tb_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="ToggleButton"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btn_w_four"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="3"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <Switch
                android:id="@+id/sw_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="Ativo"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btn_w_five"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="4"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/cb_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="Selecionável 1"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <CheckBox
                android:id="@+id/cb_example_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:text="Selecionável 2"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btn_w_six"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="6"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/rb_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radio 1"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rb_example_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radio 2"
                    android:textSize="18sp" />

            </RadioGroup>

            <Button
                android:id="@+id/btn_w_seven"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="8"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <CheckedTextView
                android:id="@+id/ctv_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="8"
                android:layout_weight="1"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="true"
                android:text="Texto selecionável"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btn_w_eight"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="9"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/s_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="9"
                android:background="@color/lightPink"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn_w_nine"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="10"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/pb_example"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="10"
                android:max="10"
                android:progress="0"
                android:layout_gravity="center" />

            <ProgressBar
                android:id="@+id/pb_example_two"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="11"
                android:max="10" />

            <Button
                android:id="@+id/btn_w_ten"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="12"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <SeekBar
                android:id="@+id/sb_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="12"
                android:max="10"
                android:progress="0" />

            <SeekBar
                android:id="@+id/sb_example_two"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="13"
                android:max="10"
                android:progress="0" />

            <Button
                android:id="@+id/btn_w_eleven"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="14"
                android:background="@drawable/ic_help_black_18dp"
                android:textAlignment="center" />

            <RatingBar
                android:id="@+id/rating_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="14"
                android:max="10"
                android:numStars="5"
                android:rating="0" />

            <TextView
                android:id="@+id/txt_example_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="15"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />
        </GridLayout>



    </ScrollView>

</RelativeLayout>
